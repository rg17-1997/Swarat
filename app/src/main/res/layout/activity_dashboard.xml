<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DASHBOARD"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@drawable/bckground">
          


        <TextView
            android:id="@+id/dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="serif-monospace"
            android:text="DASHBOARD"
            android:textAllCaps="false"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/complainbox"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/complaintbox" />


        <ImageView
            android:id="@+id/feedbackbox"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_marginStart="225dp"
            android:src="@drawable/feedback" />


        <ImageView
            android:id="@+id/aboutus"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/aboutusswarat" />


        <ImageView
            android:id="@+id/needsbox"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:layout_marginStart="225dp"
            android:src="@drawable/needs" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="400dp"
            android:layout_marginStart="135dp"
            android:src="@drawable/profile" />

    </RelativeLayout>
</ScrollView>
