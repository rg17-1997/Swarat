<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/mainimage"
    android:backgroundTint="#46fafafa"
    android:backgroundTintMode="src_over"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:alpha="0.8"
        android:text="PROFILE"
        android:textColor="#000000"
        android:textSize="50dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:hint="Name"
        android:backgroundTint="#ff0000"
        android:inputType="textPersonName"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:id="@+id/pname"
        />

    <EditText
        android:layout_width="250dp"        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:id="@+id/pemail"
        android:hint="Email Id"
        android:backgroundTint="#ff0000"
        android:inputType="textEmailAddress"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textColorHint="#000000"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325dp"
        android:backgroundTint="#e4ff0019"
        android:hint="Number of Complaints"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:id="@+id/pnoofcomplaints"
        android:textColorHint="#000000"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:layout_marginStart="125dp"
        android:background="@drawable/roundbutton"
        android:text="Go Back To Dashboard"
        android:textColor="#ffffff" />



</RelativeLayout>
